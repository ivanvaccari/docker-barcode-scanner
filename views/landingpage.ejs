<html>

    <head>

        <title>Docker barcode scanner</title>
        <style>
            pre {
                background-color: #f4f4f4;
                padding: 10px;
                border-radius: 5px;
                margin:0px,
                font-size: 0.7em;
                font-family: monospace;

            }

            .section-title {
                font-weight: bold;
            }

            .method {
                display: inline-block;
                padding: 3px;
                background-color: #007bff;
                color: white;
                border-radius: 5px;
                margin-right: 10px;
            }

            .path {
                display: inline-block;
                padding: 3px;
            }
            .endpoint {
                background-color: #e9ecef;
                padding: 3px;
                border-radius: 5px;
            }
            .pb-2 {
                padding-bottom: 0.5rem;
            }
            .pt-2 {
                padding-top: 0.5rem;
            }
        </style>
    </head>

    <body>
        <h2>Docker barcode scanner <%= version %></h2>

        <div class="pb-2">
            <a href="https://github.com/ivanvaccari/docker-barcode-scanner">GitHub</a>
        </div>
        <div class="endpoint">
            <div class='method'>POST</div> <div class='path'>/api/scan</div>
        </div>
        <div clas="input-sample pb-2 pt-2 ">
            <div class="section-title pb-2 pt-2">Input sample</div>
            <pre><%= JSON.stringify(inputSample, null, 2)%></pre>
        </div>
        <div clas="input-schema pb-2 ">
            <div class="section-title pb-2 pt-2">Input json schema</div>
            <pre><%= JSON.stringify(inputJsonSchema, null, 2)%></pre>
        </div>
        <div clas="input-schema pb-2 ">
            <div class="section-title pb-2 pt-2">Output json schema</div>
            <pre><%= JSON.stringify(outputJsonSchema, null, 2)%></pre>
        </div>
    </body>

</html>